<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <img class="navbar-brand" src="TaskMaster-logo.png" alt="TaskMaster Logo" />
      <p class="navbar-text">Organize Your Team, Optimize Your Projects</p>
    </div>
  </div>
</nav>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Welcome Back to TaskMaster</h3>
  </div>
  <div class="panel-body">
    <ul>
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <li class="bg-success"><%= error %></li>
        <% end %>
      <% end %>
    </ul>

    <form class="signinform" action="/session" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label for="username">Your username</label>
      <input type="text" name="users[username]" value="<%= @user.username %>">
      <label for="password">Password</label>
      <input type="password" name="users[password]" value="">
      <input type="submit" value="Login">
    </form>
    </div>
    <div class="panel-footer"><p>Are you new to TaskMaster? <a href="/users/new">Create a new account</a></p>
</div>
</div>


